# Cyrus Proxy Worker - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Your deployed worker URL (required for OAuth redirect URI construction)
# This should match your Cloudflare Worker subdomain
export PROXY_URL=https://your-worker-name.your-subdomain.workers.dev

# Cloudflare credentials (optional - can use 'wrangler login' instead)
export CLOUDFLARE_ACCOUNT_ID=your_account_id_here
export CLOUDFLARE_API_TOKEN=your_api_token_here

# Linear OAuth credentials (required - get from Linear app settings)
# Create a Linear OAuth app at: https://linear.app/settings/api/applications/new
# Make sure to enable webhooks and select "Agent session events"
export LINEAR_CLIENT_ID=your_linear_client_id
export LINEAR_CLIENT_SECRET=your_linear_client_secret
export LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret

# Encryption key for token storage (optional - will be auto-generated if not provided)
# Generate with: openssl rand -hex 32
export ENCRYPTION_KEY=your_32_byte_hex_encryption_key
